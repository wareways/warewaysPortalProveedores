@model Wareways.PortalProv.Infraestructura.PPROV_EmpresaUltiDia_Rece


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="box box-default">

        <div class="box-header">
            <div class="col-md-6">
                <h4 class="box-title"> Editar Fecha Ultima Recepcion Facturas  </h4>
            </div>
            <div class="col-md-6 " style="text-align:right">


            </div>
        </div>
        <div class="box-body">


            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.Label("Año", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Anio, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disabled = "disabled" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Mes", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mes, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disabled = "disabled" } })

                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CardCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", disabled = "disabled" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Dia", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Dia, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Dia Serv", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiaServ, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Mensaje", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mensaje, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Activo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(model => model.Activo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

            </div>
        </div>
        <div class="box-footer">
            <div class="col-md-6">
                <a href="@Url.Action("Index")" class="btn btn-default ">
                    <span class=" fa fa-backward" aria-hidden="true"></span>

                    Regresar Lista
                </a>
            </div>
            <div class="col-md-6">
                <button class="btn btn-success pull-right" type="submit" id="saveTeststeps">
                    Grabar y Salir &nbsp;
                    <i class="fa fa-save"></i>
                </button>
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
         $(document).ready(function () {
            if ($("#Sistema").val() == "True") {
                $('#Nombre', 'form').attr('readonly', true);
                $('#Valor', 'form').attr('readonly', true);
            }
        });
    </script>
    }
