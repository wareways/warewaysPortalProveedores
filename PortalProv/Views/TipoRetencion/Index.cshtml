@model List<Wareways.PortalProv.Infraestructura.PPROV_RetencionTipo>





<div class="box box-default">

    <div class="box-header">
        <div class="col-md-6">
            <h4 class="box-title"> Tipo Retención </h4>
        </div>
        <div class="col-md-6 " style="text-align:right">

            <a href="@Url.Action("Create")" class="btn btn-default btn-sm">
                Nuevo
                <span class="fa fa-plus-circle" aria-hidden="true"></span>
            </a>
        </div>
    </div>
    <div class="box-body">        
        <table class="table table-bordered table-condensed" id="Datos">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayName("Tipo")
                    </th>
                    <th>
                        @Html.DisplayName("Nombre")
                    </th>
                
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Retencion_Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Retencion_Nombre)
                        </td>                      
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.Retencion_Tipo }, new { @class = "btn btn-sm btn-warning glyphicon glyphicon-pencil", @title = "Editar" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
    <div class="box-footer">

    </div>
</div>





@section scripts {
    <script>
        $(function () {
            $(".data-on-change-submit")
                .change(function () {
                    var form = $("#Forma1");
                    form.submit();
                })
        });
    </script>

    <script src="~/admin-lte/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/admin-lte/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>

        $(function () {
            $('#Datos').DataTable({
                'paging': true,
                'searching': true,
                'order': [[0, "asc"]],
                'ordering': true,
                'autoWidth': false,
                'showinfo': false,
                "pageLength": 10,
                "columnDefs": [
                    { "width": "20%", "targets": 0 },
                    { "width": "70%", "targets": 1 },
                    { "width": "10%", "targets": 2 }                    
                ],
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json" }
            })
        })

    </script>
}