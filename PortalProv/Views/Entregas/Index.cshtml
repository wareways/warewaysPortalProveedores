@model  Wareways.PortalProv.Models.PP.EntregasModel

<!DOCTYPE html>


<div>
    <div class="box box-default box-solid">
        <div class="box-header with-border">
            <h4 class="box-title"><span class="fa fa-truck fa-2x"></span> Entregas</h4>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12 " >
                    @using (Html.BeginForm("Index", "Entregas", FormMethod.Post, new { id = "myForm" }))
                    {

                        @Html.Label("Rango Fechas", htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Fecha_Inicial, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Fecha_Final, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="col-md-2">
                            <button class="btn btn-success" type="submit" id="saveTeststeps">
                                Filtrar &nbsp;
                                <i class="fa fa-filter"></i>
                            </button>

                        </div>
                    }
                </div>
            </div>
            <br />

            <table class="table table-bordered table-condensed table-hover Datos">
                <thead>
                    <tr>


                        <th>

                            Numero
                        </th>
                        <th>Tipo</th>
                        <th>Fecha</th>
                        <th>Proveedor</th>

                        <th>Monto</th>
                        <th>Moneda</th>

                        <th>Estado</th>

                        <th>Orden Compra</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.L_Documentos)
                    {
                    <tr>


                        <td>
                            <a href="#" data-toggle="modal" data-titulo="Entrega" data-nombre="@Url.Action("PrintEM.aspx","Reportes",new { pid = item.DocNum })" data-target="#myModal" target="_blank" class="btn btn-default " title="Entrega">
                                <span class="fa fa-file-pdf-o" style="color:orange"></span>
                                @item.DocNum
                            </a>
                            
                        </td>
                        <td>@item.DocType</td>


                        <td>@item.DocDate</td>

                        <td>@item.CardCode @item.CardName</td>




                        <td>@item.Doctotal.Value.ToString("#,###,##0.00")</td>

                        <td>@item.DocCur</td>

                        <td>@((item.DocStatus == "C")?"Cerrado":"Abierto")</td>


                        <td>@item.OC</td>




                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document" style="width:80%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="myModalLabelTitle">Modal title</h4>
            </div>

            <div class="modal-body" id="ContenedorPDF">

            </div>


        </div>
    </div>
</div>

@section scripts
{

    <script src="~/admin-lte/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/admin-lte/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#myModal").on("show.bs.modal", function (e) {
                var id = $(e.relatedTarget).data('nombre');
                var titulo = $(e.relatedTarget).data('titulo');

                $("#ContenedorPDF").html("<embed src='" + id + "' type='application/pdf' style='width:100%; height:35vw;'  />");
                $("#myModalLabelTitle").html(titulo);

            });
        });
    </script>
    <script>

        $(function () {
            $('.Datos').DataTable({
                'paging': true,
                'searching': true,
                'ordering': true,
                'autoWidth': false,
                'showinfo': false,
                "pageLength": 25,
                "order": [[0, "desc"]],
                //"columnDefs": [
                //    { "width": "60%", "targets": 0 },
                //    { "width": "20%", "targets": 1 },
                //    { "width": "20%", "targets": 2 }
                //],
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json" }
            })
        })

    </script>

}