                </button>
            </div>
        </div>


    </div>




}
<div class="row">
    <div class="col-md-4">


        <div class="box box-info">
            <div class="box-header with-border">
                <h4 class="box-title">Permisos Empresa</h4>
            </div>
            <div class="box-body">
                <table class="table table-condensed table-hover">
                    <thead>
                        <tr>
                            <th>Empresa</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var _Item in l_ADM_EmpresasOficina)
                        {
                            <tr>
                                <td>@_Item.Empresa_Name</td>
                                <td>
                                    @if (_Item.Activo == 0)
                                    {
                                        <a href="@Url.Action("AgregarEmpresaOficina",new { EmpresaId = _Item.Empresa_Id, UserId = Model.Id  })" class="btn btn-success"> Asignar <span class="fa fa-plus-circle"></span></a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("QuitarEmpresaOficina",new { EmpresaId = _Item.Empresa_Id, UserId = Model.Id  })" class="btn btn-danger confirmswal" data-mensajeswal="De Eliminar este Permiso"> Quitar <span class="fa fa-minus-circle"></span></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
    <div class="col-md-8">
        @if (_RolesAsignado.Where(p => p.Name == "Proveedor").Count() == 1)
        {
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title">Permisos Proveedores</h4>
                </div>
                <div class="box-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>Empresa</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var _Item in l_PermisosUsuarioCodigosProv)
                            {
                                <tr>
                                    <td>@_Item.Empresa_Name</td>
                                    <td>@_Item.CardCode</td>
                                    <td>@_Item.CardName</td>
                                    <td>
                                        <a href="@Url.Action("QuitarCodProv",new { EmpresaId = _Item.Empresa_Id,Id = Model.Id , CardCode = _Item.CardCode })" class="btn btn-danger confirmswal" data-mensajeswal="De Eliminar este Permiso"> Quitar <span class="fa fa-minus-circle"></span></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>

                                @using (Html.BeginForm("AgregaCodProv", "Usuario", FormMethod.Post))
                                {
                                    @Html.HiddenFor(p => p.Id);
                                    <td>
                                        @Html.DropDownList("EmpresaId", new SelectList(ViewBag.Empresas, "Empresa_Id", "Empresa_Name", "1"),
                                            new { @Class = "form-control ExcluirSoloLectura" })
                                    </td>
                                    <td colspan="2">
                                        @Html.TextBox("CardCode", "", htmlAttributes: new { @class = "form-control" })
                                    </td>
                                    <td>
                                        <button class="btn btn-success pull-right " type="submit" id="saveTeststeps">
                                            Insertar &nbsp;
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </td>
                                }

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }

        @if (_RolesAsignado.Where(p => p.Name == "Ordenes Compra").Count() == 1)
        {
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title">Permisos Departamentos</h4>
                </div>
                <div class="box-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>Empresa</th>
                                <th>Departamento</th>
                                <th>Crear</th>
                                <th>Autorizar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var _Item in l_PermisosUsuarioCodigosDepto)
                            {
                                <tr>
                                    <td>@Session["EmpresaSelName"].ToString()</td>
                                    <td>@_Item.DepartmentName</td>
                                    <td>@Html.EditorFor(Model => _Item.Crear)</td>
                                    <td>@Html.EditorFor(Model => _Item.Autorizar)</td>
                                    <td>
                                        <a href="@Url.Action("QuitarCodDepto",new { EmpresaId = _Item.Empresa_Id,Id = Model.Id , DepartmentId = _Item.DepartmentId })" class="btn btn-danger confirmswal" data-mensajeswal="De Eliminar este Permiso"> Quitar <span class="fa fa-minus-circle"></span></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>

                                @using (Html.BeginForm("AgregaCodDepto", "Usuario", FormMethod.Post))
                                {
                                    @Html.HiddenFor(p => p.Id);
                                    <td>
                                        @Html.DropDownList("EmpresaId", new SelectList(ViewBag.EmpresasFiltro, "Empresa_Id", "Empresa_Name", "1"),
                                            new { @Class = "form-control ExcluirSoloLectura" })
                                    </td>
                                    <td colspan="1">
                                        @Html.TextBox("DepartmentId", "", htmlAttributes: new { @class = "form-control" })
                                    </td>
                                    <td colspan="1">
                                        @Html.CheckBox("Crear")
                                    </td>
                                    <td colspan="1">
                                        @Html.CheckBox("Autorizar")
                                    </td>
                                    <td>
                                        <button class="btn btn-success pull-right " type="submit" id="saveTeststeps">
                                            Insertar &nbsp;
                                            <i class="fa fa-save"></i>
                                        </button>
                                    </td>
                                }

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
    </div>
</div>



