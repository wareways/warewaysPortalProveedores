                </div>






            </div>


            <div>

            </div>
        </div>
        <div class="box-footer">
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Usuario")" class="btn btn-default">
                    Regresar
                    <span class="fa fa-backward" aria-hidden="true" style="color:green"></span>
                </a>
            </div>

            <div class="col-md-2">
                <a href="@Url.Action("CorreoConfirmacion", "Usuario",new { UserId = Model.Id })" class="btn btn-warning">
                    Correo Confirmación
