@section scripts
{
    <script src="~/admin-lte/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <script>


        $(document).ready(function () {
            $(".BtnOpenAsignarRuta").click(function () {
                $('#ModalasignarRuta').modal('show');
            })


            $("#CardCode").autocomplete({
                source: function (request, response) {
                    var empresaId = $("#EmpresaId").val();
                    $.ajax({
                        url: "@Subsite/Usuario/ObtenerPorveedores",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term, EmpresaId: empresaId },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.Name, value: item.value };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "",
                    results: function (count) {
                        return count + (count > 1 ? ' results' : ' result ') + ' found';
                    }
                }
            });

            $("#DepartmentId").autocomplete({
                source: function (request, response) {
                    var empresaId = $("#EmpresaId").val();
                    $.ajax({
                        url: "@Subsite/Usuario/ObtenerDeptos",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term, EmpresaId: empresaId },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.Name, value: item.value };
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "",
                    results: function (count) {
                        return count + (count > 1 ? ' results' : ' result ') + ' found';
                    }
                }
            });
        });


    </script>



}








