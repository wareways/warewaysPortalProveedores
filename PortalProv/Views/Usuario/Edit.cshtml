@model Wareways.PortalProv.Infraestructura.AspNetUsers
@using System.Configuration
@{

    var Subsite = ConfigurationManager.AppSettings["SubSite"];
}
@{
    var l_ADM_EmpresasOficina = (List<Wareways.PortalProv.Infraestructura.SP_PPROV_ADM_EmpresasOficina_Result>)ViewBag.OficinaEmpesasPermiso;
    var l_PermisosUsuarioCodigosProv = (List<Wareways.PortalProv.Infraestructura.SP_PPROV_PermisosCodigosProv_Usuario_Result>)ViewBag.PermisosUsuarioCodigosProv;
    var l_PermisosUsuarioCodigosDepto = (List<Wareways.PortalProv.Infraestructura.SP_GetUserDepartment_Result>)ViewBag.PermisosUsuarioCodigosDepto;
    var _RolesAsignado = (List<Wareways.PortalProv.Infraestructura.V_GEN_UsuarioRoles>)ViewBag.RolesAsignados;
}

