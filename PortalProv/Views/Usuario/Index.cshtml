@model IEnumerable<Wareways.PortalProv.Infraestructura.AspNetUsers>


<div class="box box-default">
    <div class="box-header with-border">
        <div class="col-md-8">
            <h4 class="box-title">Listado de Usuarios</h4>
        </div>
        <div class="col-md-4" style="text-align:right">


            <a href="@Url.Action("ExportExcel", "Usuario")" class="btn btn-info btn-sm">
                Excel
                <span class="fa fa-file-excel-o" aria-hidden="true"></span>
            </a>
            |
            <a href="@Url.Action("Register", "Account")" class="btn btn-default btn-sm">
                Nuevo
                <span class="fa fa-plus-circle" aria-hidden="true"></span>
            </a>
        </div>

    </div>
    <div class="box-body">
        <table class="table table-hover table-bordered" id="Datos">
            <thead>
                <tr>
                    <th>
                        @Html.Label("Codigo Usuario")

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Puesto)
                    </th>
                    <th>
                        @Html.Label("Correo")
                    </th>
                    <th>
                        @Html.Label("Confirmado")
                    </th>
                    <th>
                        @Html.Label("Teléfono")
                    </th>


                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puesto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(p => item.EmailConfirmed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>


                    <td style="text-align:center">


                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-warning glyphicon glyphicon-pencil", @title = "Editar" })
                        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger glyphicon glyphicon-erase deleteswal", @title = "Eliminar", @onclick = "return confirm('¿ Esta seguro de Eliminar el Usuario ?')" })
                    </td>
                </tr>
            }
                </tbody>
        </table>
    </div>
</div>
<p>

</p>

@section scripts
{
    <script src="~/admin-lte/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/admin-lte/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>

        $(function () {
            $('#Datos').DataTable({
                'paging': true,
                'searching': true,
                'ordering': true,
                'autoWidth': false,
                'showinfo': false,
                "pageLength": 25,
                //"columnDefs": [
                //    { "width": "60%", "targets": 0 },
                //    { "width": "20%", "targets": 1 },
                //    { "width": "20%", "targets": 2 }
                //],
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json" }
            })
        })

    </script>

}

