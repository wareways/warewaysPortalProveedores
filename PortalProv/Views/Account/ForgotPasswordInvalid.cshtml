@{
    ViewBag.Title = "Forgot Password Confirmation";
}

    <div class="col-md-6 col-xs-12">
        <div class="box box-default box-solid">
            <div class="box-header with-border">
                <h4 class="box-title"> <span class="fa fa-envelope fa-2x"></span>&nbsp; Recuperación de Contraseña (Paso 2)</h4>
            </div>
            <div class="box-body">

                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-check"></i> Correo no Encontrado !!!</h4>
                    <p>Por favor revise el correo ingresado para asegurarse que sea el mismo que se le asigno.</p>
                    
                </div>




            </div>
            <div class="box-footer">
                <a href="@Url.Action("ForgotPassword")" class="btn btn-default ">
                    <span class=" fa fa-backward" aria-hidden="true"></span>

                    Regresar a Recuperar contraseña
                </a>
            </div>
           
        </div>
    </div>


